<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.psg.guesthousebooking.model.RoomReservation" table="t_room_reservation">      
      <composite-id>
		<key-property name="reservationId" type="int" column="c_reservation_id"  />
		<key-property name="roomId" type="int" column="c_room_id"/>
      </composite-id>
      <property name="status" column="c_status">
    		<type name="org.hibernate.type.EnumType">
        		<param name="enumClass">com.psg.guesthousebooking.model.RoomReservationStatus</param>
    		</type>
	  </property>  
   </class>
</hibernate-mapping>